pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        
       stage('Testing Stage') {

            steps{
                    sh 'mvn test'
            }
        }
        
        stage('Run') {
            steps {
                sh 'mvn spring-boot:run'
            }
        }
    
    post {
        success {
            echo 'Pipeline run successfuly!'
        }
        
        failure {
            mail: bbc: '', body: '''job failed''',
               cc: '', from: '', replayTo: '', subject: 'Jenkins Job', to: 'nivaz@ac.sce.ac.il'
        }
    }
}
