pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
        stages {
              emailext body: 'jenkins start', subject: 'start jenkins', to: 'nivaz@ac.sce.ac.il'
              stage('Build') {
                steps {
                    sh 'mvn -B -DskipTests clean package'
                }
            }

           stage('Testing Stage') {

                steps{
                        sh 'mvn test'
                }
            }
       }
}
