pipeline {
    agent {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
            run '--name GSM -p 27017:27017 '
        }
    }
        stages {
              stage('Build') {
                steps {
                    sh 'mvn -B -DskipTests clean package'
                }
            }

           stage('Testing Stage') {

                steps{
                        sh 'mvn test'
                }
            }
       }
}
